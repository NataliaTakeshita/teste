<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pao">
  <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="414dp"
      android:layout_height="0dp"
      android:orientation="vertical"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">




      <ImageView
          android:id="@+id/logos"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="#FFC07E"
          app:srcCompat="@drawable/logo" />


    </LinearLayout>
  </LinearLayout>


  <ImageView
      android:id="@+id/imageView23"
      android:layout_width="174dp"
      android:layout_height="118dp"
      android:layout_marginStart="118dp"
      android:layout_marginTop="39dp"
      android:layout_marginEnd="119dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout"
      app:srcCompat="@drawable/pao" />




  <TextView
      android:id="@+id/textView4"
      android:layout_width="307dp"
      android:layout_height="20dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="48dp"
      android:layout_marginEnd="91dp"
      android:fontFamily="@font/michroma"
      android:text="Hmm..."
      android:textColor="#6C6B6B"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView23" />




  <TextView
      android:id="@+id/textView5"
      android:layout_width="377dp"
      android:layout_height="47dp"
      android:layout_marginStart="1dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="1dp"
      android:fontFamily="@font/michroma"
      android:text="Pelo que parece você escolheu o nosso delicioso pão francês."
      android:textColor="#6C6B6B"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.285"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView4" />




  <LinearLayout
      android:id="@+id/linearLayout7"
      android:layout_width="377dp"
      android:layout_height="40dp"
      android:layout_marginStart="1dp"
      android:layout_marginTop="25dp"
      android:layout_marginEnd="1dp"
      android:orientation="horizontal"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.285"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView5">




    <TextView
        android:id="@+id/textView6"
        android:layout_width="65dp"
        android:layout_height="39dp"
        android:fontFamily="@font/michroma"
        android:text="Valor:"
        android:textColor="#680000" />




    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/michroma"
        android:text="R$   0,30unidade" />
  </LinearLayout>




  <LinearLayout
      android:id="@+id/linearLayout11"
      android:layout_width="234dp"
      android:layout_height="174dp"
      android:layout_marginStart="37dp"
      android:layout_marginTop="56dp"
      android:layout_marginEnd="37dp"
      android:orientation="vertical"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout7">




    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/michroma"
        android:hint="Quantas unidades?"
        android:inputType="number" />


    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:backgroundTint="#403128"
        android:text="Comprar" />
  </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>